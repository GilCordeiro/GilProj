# inclusao da gem (framework): colorize
require 'colorize'

# Definicao da classe
class Main
	# defini;c√£o do construtor
	def initialize
		puts 'Iniciei!'.colorize(:light_green)
	end

	# Defincao de um metodo da classe
	def hello
		puts 'Hello'.colorize(:light_blue)
	end
end

# instancia da classe (objeto)
main_objs = Main.new
# chamada do metodo
main_objs.hello
